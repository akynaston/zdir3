# Note: this is the config that Aaron uses. If you choose to use the same setup be sure to install:
#	WinMerge
# 	Notepad++
# And document where the software is installed, as you may need to change it.

[user]
	name = YOUR USERNAME
	email = YOUR EMAIL ADDRESS
[alias]
	lg = !git lg1						# All lg aliases give an ideal form of logging.
	lgs = lg --simplify-by-decoration
	lgn = !git lg1 -n 5
	lg1 = !git lg1-specific
	lg2 = !git lg2-specific
	lg1-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
	lg2-specific = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
	s = !git status -s --branch && git stash list
	si = !git status -s --branch --ignored && git stash list	# Gives status plus lists files that are ignored.		
	b = branch -vv						# List all local branches along with commit id's and messages.
	ba = branch -avv					# List all local and remote branches.
	r = remote -v		
	f = fetch -v
[diff]
	tool = winmerge						# Tool specified to do diffing. You can use your own; though you'll need to research the config.
[merge]
	tool = winmerge
	ff = only  # only allows fast forward merges; is useful to avoid merge commits when they're unnecessary; use --no-ff to disable.
[difftool "winmerge"]
	cmd = /c/Program\\ Files/Winmerge/WinMergeU.exe -u -e $LOCAL $REMOTE
[mergetool "winmerge"]
	cmd = /c/Program\\ Files/Winmerge/WinMergeU.exe -u -e $LOCAL $REMOTE
[difftool]
	prompt = true
[mergetool]
	prompt = true
	keepBackup = true
[core]
	editor = 'C:\\Program Files\\Notepad++\\Notepad++.exe' -multiInst -notabbar -nosession -noPlugin
	excludesfile = C:\\Users\\x266698\\.gitignore
[rerere]
	enabled = true
[pull]
	ff = only				 # Allow only fast forward merges unless specified otherwise . .


